<div class="container my-5">
  <div class="row">
    <h2>会員一覧</h2>
  </div>

  <div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
  </div>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email%></td>
            <td><% if customer.is_deleted == true %>
                <font color="red">退会</font>
                <% else %>
                <font color="green">有効</font>
                <% end %>
            </td>
          </tr>
        <% end %>
          
        </tbody>  
    </table>      
</div>      
        
      
