<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, local:true do |f| %>

<h4>商品画像</h4>
<%= f.attachment_field :image %>

<h4>商品名</h4>
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :detail %>

<h4>ジャンル</h4>
<%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %>

<h4>税抜価格</h4>
<%= f.text_field :price %>円

<h4>販売ステータス</h4>
<%= f.radio_button :is_active, true %>販売中
<%= f.radio_button :is_active, false %>販売停止中

<%= f.submit '新規登録' %>


<% end %>


