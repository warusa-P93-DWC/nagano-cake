<div class="container">
  <div class="row">

      <h4 class="mb-5 text-color col-3 text-center pt-4 rounded-pill">
        商品一覧(全<%= @items.count %>件)
      </h4>
    <div class="col-8 product_index_image offset-1"></div>

  </div>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card mb-3">
          <%= link_to public_item_path(item.id) do %>
            <%= attachment_image_tag item,:image, size:"255x210", fallback: "no_image.jpg" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= item.name %>
            </h5>
            <p class="card-text">
              <% tax_in = item.price * 1.10 %>
                ¥ <%= tax_in.round.to_s(:delimited) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>